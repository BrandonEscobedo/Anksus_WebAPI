@inject anskus.Application.Cuestionarios.ICuestionarioService _CuestionarioService
@inject IDialogService DialogService
@inject anskus.Application.Cuestionarios.IIdContainer IdContainer
@using System.Security.Claims
@using MediatR
<MudDialog>
<DialogContent>
    <MudInputLabel>Titulo</MudInputLabel>
    <input type="text" @bind-value="cuestionarioDTO.Titulo" />
